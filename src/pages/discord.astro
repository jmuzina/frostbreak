---
import BaseLayout from "../layouts/BaseLayout.astro";
import Hero from "../components/Hero.astro";
const inviteLink = "https://discord.gg/gnbAMtPymy";
const title = "Frostbreak Discord Server";
const description = "Join our discord server";
const tagLine = "Connect with us on Discord";
---
<BaseLayout title={title} description={description}>
    <Hero title={title} tagline={tagLine}>
        <p>Redirecting to our discord server.</p>
        <p>Click <a href={inviteLink}>here</a> if you are not redirected.</p>
        <noscript>
            <p>
              Your browser does not support JavaScript or you have disabled JavaScript.
              Please click the link above to join our Discord server.
            </p>
        </noscript>
    </Hero>
</BaseLayout>

<script is:inline>
  window.location.href = "https://discord.gg/gnbAMtPymy";
</script>